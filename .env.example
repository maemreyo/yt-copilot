# ========================================
# ENVIRONMENT
# ========================================
NODE_ENV=development
APP_NAME=YouTube Learning Co-pilot
APP_VERSION=0.1.0

# ========================================
# SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_REGION=us-east-1

# ========================================
# STRIPE CONFIGURATION
# ========================================
# Development: use sk_test_... keys
# Production: use sk_live_... keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_product_price_id

# ========================================
# RESEND EMAIL CONFIGURATION
# ========================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ========================================
# YOUTUBE API CONFIGURATION
# ========================================
# Get your API key from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-api-key-here
YOUTUBE_API_QUOTA_PER_DAY=10000
YOUTUBE_CACHE_TTL_SECONDS=86400
YOUTUBE_RATE_LIMIT_PER_MINUTE=20
YOUTUBE_RATE_LIMIT_PER_HOUR=600

# ========================================
# TRANSLATION API CONFIGURATION (Future)
# ========================================
# Google Translate API (optional for now)
GOOGLE_TRANSLATE_API_KEY=
GOOGLE_TRANSLATE_PROJECT_ID=

# ========================================
# APP CONFIGURATION
# ========================================
APP_URL=http://localhost:3000

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Production: Use strong, unique secrets (32+ characters)
# Development: Default values will be used if not set
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
ENCRYPTION_KEY=your-encryption-key-at-least-32-chars

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Global rate limits (requests per minute)
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_AUTH=10
RATE_LIMIT_API_KEYS=5
RATE_LIMIT_BILLING=20
RATE_LIMIT_UPLOADS=10

# ========================================
# SECURITY & CORS CONFIGURATION
# ========================================
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=false
CORS_MAX_AGE=86400

# Content Security Policy (leave empty for default)
CSP_POLICY=

# Additional allowed return domains for billing (comma-separated)
ALLOWED_RETURN_DOMAINS=

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_STRUCTURED=false
LOG_ENABLE_COLORS=true
LOG_INCLUDE_STACK_TRACE=true
LOG_MAX_MESSAGE_LENGTH=10000
LOG_REDACT_SENSITIVE=true

# External logging services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_EXTERNAL_ENDPOINT=
LOG_EXTERNAL_API_KEY=

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=60000
CACHE_NAMESPACE=cache

# Redis configuration (if using Redis cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=saas_starter:

# ========================================
# MONITORING & OBSERVABILITY
# ========================================
LOG_LEVEL=debug
METRICS_ENABLED=false
SENTRY_DSN=

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_MAX_CONNECTIONS=20
DATABASE_TIMEOUT=5000

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_REDIS_URL=

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_AUTH_ENABLED=true
FEATURE_BILLING_ENABLED=true
FEATURE_YOUTUBE_ENABLED=true
FEATURE_TRANSLATION_ENABLED=false
FEATURE_AI_SUMMARY_ENABLED=false

# ========================================
# DEVELOPMENT TOOLS
# ========================================
DEV_TOOLS_ENABLED=true
DEV_SEED_DATA=true
DEV_API_LOGGING=true

# ========================================
# TEST CONFIGURATION
# ========================================
# Only used in test environment
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test-password
